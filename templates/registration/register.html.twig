{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-8 bg-white rounded-md overflow-hidden shadow-md">
    <div class="py-4 px-6">
        <h1 class="text-3xl font-bold mb-4">Register</h1>

        {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_row(registrationForm.username, {'attr': {'class': 'bg-gray-100 py-2 px-4 rounded-md w-full'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'bg-gray-100 py-2 px-4 rounded-md w-full'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.confirmPlainPassword, {'label': 'Confirmer le mot de passe', 'attr': {'class': 'bg-gray-100 py-2 px-4 rounded-md w-full'}}) }}
        </div>
        <div class="text-center
        ">
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md">Register</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
