{% extends 'base.html.twig' %}

{% block body %}
  <div class="mx-8 my-12">
    {{ knp_pagination_render(comments) }}
    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
      <table class="w-full text-sm text-left text-gray-400">
        <thead class="text-xs uppercase bg-gray-700 text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3">
              Auteur
            </th>
            <th scope="col" class="px-6 py-3">
              Contenu
            </th>
            <th scope="col" class="px-6 py-3">
              Date de création
            </th>
            <th scope="col" class="px-6 py-3 max-w-10">
              <span class="sr-only">Edit</span>
            </th>
          </tr>
        </thead>
        <tbody>
          {% for comment in comments %}
          <tr class="border-b bg-gray-800 border-gray-700 hover:bg-gray-600">
            <td class="px-6 py-4 font-medium whitespace-nowrap text-white cursor-pointer hover:text-blue-500">
              {{comment.username}}
            </td>
            <td class="px-6 py-4 cursor-text">
              {{ comment.content }}
            </td>
            <td class="px-6 py-4 cursor-default">
              {{ comment.createdAt|date('d/m/Y \\à G\\hi') }}
            </td>
            <td class="px-6 py-4 text-right">
              <a href="/admin/comments/validate/{{ comment.id }}?admin=true&page={{ comments.currentPageNumber }}" class="font-medium text-blue-500 hover:underline">Valider</a>
              <a href="/admin/comments/delete/{{ comment.id }}?admin=true&page={{ comments.currentPageNumber }}" class="font-medium text-blue-500 hover:underline ml-2">Supprimer</a>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    {{ knp_pagination_render(comments) }}
  </div>
{% endblock %}
