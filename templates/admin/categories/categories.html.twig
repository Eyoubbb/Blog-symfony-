{% extends 'base.html.twig' %}
{% block body %}
    <div class="mx-auto max-w-7xl">
        {{ knp_pagination_render(categories) }}
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-sm text-left text-gray-400">
                <thead class="text-xs uppercase bg-gray-700 text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nombre de posts
                    </th>
                    <th scope="col" class="px-6 py-3 max-w-10">
                        <span class="sr-only">Edit</span>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr class="border-b bg-gray-800 border-gray-700 hover:bg-gray-600">
                        <th scope="row" class="px-6 py-4 font-medium whitespace-nowrap text-white cursor-pointer">
                            {{ category.generateHTMLTag()|raw }}
                        </th>
                        <td class="px-6 py-4">
                            {{ category.posts|length }}
                        </td>

                        <td class="px-6 py-4 text-right">
                            <a href="#" class="font-medium text-blue-500 hover:underline">Modifier</a>
                            <a href="/admin/categories/{{ category.id }}/delete" class="font-medium text-blue-500 hover:underline">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {{ knp_pagination_render(categories) }}
        <div class="flex justify-end mt-4">
            <a href="/admin/create/categories" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-4 rounded mb-8 focus:outline-none focus:shadow-outline">Créer une nouvelle catégorie</a>
        </div>
    </div>
{% endblock %}
