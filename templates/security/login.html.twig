{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="max-w-md mx-auto mt-8">
  <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    {% if error %}
      <div class="mb-4">
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
        </div>
      </div>
    {% endif %}

    {% if app.user %}
      <div class="mb-4">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
      </div>
    {% endif %}

    <h1 class="text-3xl font-bold mb-4">Please sign in</h1>
    <div class="mb-4">
      <label for="inputUsername" class="block text-gray-700 font-bold mb-2">Username</label>
      <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="bg-gray-100 rounded-md py-2 px-4 w-full" autocomplete="username" required autofocus>
    </div>
    <div class="mb-4">
      <label for="inputPassword" class="block text-gray-700 font-bold mb-2">Password</label>
      <input type="password" name="password" id="inputPassword" class="bg-gray-100 rounded-md py-2 px-4 w-full" autocomplete="current-password" required>
    </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="mb-4">
      <label class="block text-gray-500 font-bold">
        <input type="checkbox" name="_remember_me" class="mr-2 leading-tight">
        <span class="text-sm">Remember me</span>
      </label>
    </div>

    <div class="text-center">
      <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
        Sign in
      </button>
    </div>
  </form>
</div>
{% endblock %}
